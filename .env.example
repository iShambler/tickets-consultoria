# Configuración de la aplicación
APP_URL=http://localhost/ticket-consultoria
APP_ENV=development

# Configuración de base de datos
# Para XAMPP en Windows, estos son los valores por defecto:
DB_HOST=localhost
DB_NAME=ticket_consultoria
DB_USER=root
DB_PASS=

# Configuración de email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-app
MAIL_FROM=noreply@tuempresa.com
MAIL_FROM_NAME=Sistema de Tickets

# Seguridad
# Generar una clave aleatoria para producción
APP_KEY=

# Configuración de sesiones
SESSION_LIFETIME=7200
